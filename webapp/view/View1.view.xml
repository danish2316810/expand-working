<mvc:View controllerName="app.expand.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <Button id="_IDGenButton" text="{BusinessPartnerSet/0/BusinessPartnerID}"></Button>
         <VBox id="_IDGenVBox1">
           <ComboBox items="{/BusinessPartnerSet}" selectionChange="onComboBoxSelectionChange">
                <items>
                    <core:Item key="{BusinessPartnerID}" text="{BusinessPartnerID}" />
                </items>
            </ComboBox>
           </VBox> 

           <Table id="salesOrderTable" items="{salesOrders>/}" inset="true">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Sales Orders" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Label text="Sales Order ID" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Customer ID" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Gross Amount" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="CustomerName" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{salesOrders>SalesOrderID}" />
                            <Text text="{salesOrders>CustomerID}" />
                            <Text text="{salesOrders>TaxAmount}" />
                            <Text text="{salesOrders>CustomerName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
